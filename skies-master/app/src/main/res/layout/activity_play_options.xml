<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skies.ajayioluwatobi.skies.play_options"
    android:background="@drawable/skies_background">

    <ImageButton
        android:id="@+id/single_player_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        app:srcCompat="@drawable/single_player_button" />

    <ImageButton
        android:id="@+id/multiplayer_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/single_player_button"
        android:layout_alignStart="@+id/single_player_button"
        android:layout_below="@+id/single_player_button"
        android:layout_marginTop="38dp"
        app:srcCompat="@drawable/multiplayer_button" />

    <ImageButton
        android:id="@+id/main_menu_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/multiplayer_button"
        android:layout_alignStart="@+id/multiplayer_button"
        android:layout_below="@+id/multiplayer_button"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/main_menu" />
</RelativeLayout>
